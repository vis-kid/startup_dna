<% @interviewees.each do |interviewee| %>

  <ul>
		<li class='interviewee'>
			<h2 data-role='interviewee_name'><%= interviewee.name %></h2>

			<h5 data-role='interviewee_video_link'>
				<span class='video_counter'>
					<%= link_to pluralize(interviewee.videos.count, 'Video'), '#', class: 'video_link' %>
				</span>
			</h5>

	 	  <p  data-role='interviewee_about_text'><%= interviewee.about_text %></p>
			<h3 data-role='interviewee_twitter_handle'><%= interviewee.twitter_handle %></h3>
			<h3 data-role='interviewee_weblink'><%= interviewee.weblink %></h3>

      <%= image_tag interviewee.user_pic.url %>
		</li>
	</ul>

<% end %>

<%= paginate @interviewees %>
