<div class='blue_top_line'></div>

<div class='full_width_video_wrapper'>
	<article>
	  <div class='video_container'>

	    <% @videos.each do |video| %>

	  		<ul>
	  			<li class='video'>

	  			<header>
	  			<h3 data-role='video_quote'><%= video.quote %></h3>
	  			</header>

	  			<h4 data-role='video_category'><%= video.category %></h3>
	  			<h2 data-role='interviewee_name'><%= video.interviewee.name %></h2>
	  			<p data-role='video_description'><%= video.description %></p>
	  			</li>
	  		</ul>

      <% end %>

	  </div>
  </article>
</div>

<div class='blue_squares_down'></div>
<div class='video_pillow'></div>


<%= paginate @videos %>
