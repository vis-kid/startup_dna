<% @interviewees.each do |interviewee| %>

<div class='blue_top_line'></div>

<div class='interviewee_box_outer_container'>
  <div class='interviewee_box'>
    <ul>
		  <li class='interviewee'>

		  	<h2 class='interviewee_name' data-role='interviewee_name'>
          <%= interviewee.name %>
        </h2>

		  	<h5 class='video_counter' data-role='interviewee_video_link'>
		  			<%= link_to pluralize(interviewee.videos.count, 'Video'), '#' %>
		  	</h5>

		  	<div class='profile_picture' data-role='interviewee_user_pic'>
          <div class='blue_squares_down'></div>
          <%= image_tag interviewee.user_pic.url %>
        </div>

	 	    <div class='about_text'>
          <p data-role='interviewee_about_text'>
            <%= simple_format interviewee.about_text %>
          </p>
        </div>
         
		  	<h3 class='twitter_handle' data-role='interviewee_twitter_handle'>
          <%= interviewee.twitter_handle %>
        </h3>

        <div class='tags'>
          @tags not implemented yet
        </div>

		  	<h3 class='weblink' data-role='interviewee_weblink'>
          <%= interviewee.weblink %>
        </h3>

		  </li>
	  </ul>

  </div>
</div>

<div class='blue_squares_down'></div>

<% end %>

<%= paginate @interviewees %>
